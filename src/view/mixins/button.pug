mixin button(text, className, href, icon, w, h)
	if href
		a.button(href=href, class=className)&attributes(attributes)
			if text
				span!= text
			if icon
				+icon(icon)(width=w, height=h)
	else
		button.button(class=className)&attributes(attributes)
			if text
				span!= text
			if icon
				+icon(icon)(width=w, height=h)

